<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                app:srcCompat="@drawable/logoalcaldia" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                app:srcCompat="@drawable/bienvenida" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPredial"
                    android:layout_width="160sp"
                    android:layout_height="220sp"
                    android:gravity="center_horizontal"
                    android:onClick="Predial"
                    android:textAlignment="center"
                    app:srcCompat="@drawable/pagopredial" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="5sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/ivIca"
                    android:layout_width="160sp"
                    android:layout_height="220sp"
                    android:onClick="Ica"
                    app:srcCompat="@drawable/pagoica" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Visita nuestros canales oficiales y actualizate"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:textAlignment="center"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/ivPortal"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:onClick="Portal"
                        android:textAlignment="center"
                        app:srcCompat="@drawable/portal" />

                    <ImageView
                        android:id="@+id/ivFacebook"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:onClick="Facebook"
                        android:textAlignment="center"
                        app:srcCompat="@drawable/facebook" />

                    <ImageView
                        android:id="@+id/ivTwitter"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:onClick="Twitter"
                        android:textAlignment="center"
                        app:srcCompat="@drawable/twitter" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="YolombÃ³ - Antioquia"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="App desarrollada por 1Cero1 Software - Copyright 2020"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Todos los derechos reservados"
                android:textAlignment="center"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="196dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:onClick="Dashboard"
                android:textAlignment="center"
                app:srcCompat="@drawable/logo101" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>